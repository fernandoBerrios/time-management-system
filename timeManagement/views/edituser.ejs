<%- include header.ejs %>

<div class="main-content-container container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            <h3 class="page-title">Edit User</h3>
        </div>
    </div>
    <!-- End Page Header -->
    <!-- Add User -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card card-small mb-4">
                <div class="card-header border-bottom">
                    <h6 class="m-0">Edit User Details</h6>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-3">
                        <div class="row">
                            <div class="col">
                                <form method="post">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="feFirstName">Email</label>
                                            <input type="text" name="username" value="<%= editUser.username %>" class="form-control"
                                                readonly> </div>
                                        <div class="form-group col-md-6">
                                            <label for="feEmailAddress">Employee ID</label>
                                            <input type="text" name="employeeID" value="<%= editUser.employeeID %>"
                                                class="form-control" readonly>

                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="feLastName">Last Name</label>
                                            <input type="text" name="lastName" value="<%= editUser.lastName %>"
                                                class="form-control" required></div>
                                        <div class="form-group col-md-6">
                                            <label for="fePhone">First Name</label>
                                            <input type="text" name="firstName" value="<%= editUser.firstName %>"
                                                class="form-control" required> </div>

                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="feEmpolyeeID">Department</label>
                                            <input type="text" name="department" value="<%= editUser.department %>"
                                                class="form-control" required></div>
                                         <div class="form-group col-md-6">
                                                <label for="feEmpolyeeID">Team</label>
                                                 <input type="text" name="team" value="<%= editUser.team %>"
                                                    class="form-control" required></div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="feEmpolyeeID">Level</label>
                                            <div class="form-group">
                                                    <select class="form-control" name="level">
                                                        <% if (editUser.level == 3) { %>
                                                            <option value="3" selected>Team Member</option>
                                                            <option value="2">Team Lead/Top Managment</option>
                                                            <option value="0">Admin</option>
                                                        <%} else if (editUser.level == 2) {%>
                                                            <option value="3">Team Member</option>
                                                            <option value="2" selected>Team Lead/Top Managment</option>
                                                            <option value="0">Admin</option>
                                                        <%} else {%>
                                                            <option value="3">Team Member</option>
                                                            <option value="2">Team Lead/Top Managment</option>
                                                            <option value="0" selected>Admin</option>
                                                        <% }%>
                                                       
                                                    </select>
                                                </div>
                                            <!--<input type="text" name="level" placeholder="Level" class="form-control"
                                                required>--> </div>
                                                <div class="form-group col-md-6">
                                                    <label for="feJobTitle">Job Title</label>
                                                    <input type="text" name="jobTitle" value="<%= editUser.jobTitle %>"
                                                        class="form-control" required> </div>

                                     
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="feLegalWorkingStatus">Legal Working Status</label>
                                            <input type="text" name="workingStatus" value="<%= editUser.workingStatus %>"
                                                class="form-control" required> </div>
                                        <div class="form-group col-md-6">
                                            <label for="feStartDate">Start Date</label>
                                            <input type="text" name="startDate" value="<%= editUser.startDate %>"
                                                class="form-control" required> </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="feFulltimePartTime">Full Time Or Part-Time/Contractor</label>
                                            <input type="text" name="fullTimePartTime" value="<%= editUser.fullTimePartTime %>"
                                                class="form-control" required> </div>
                                    </div>
                                    <input type="submit" value="Add User" class="btn btn-success">
                                </form>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Add User -->
</div>
</main>
</div>
</div>

